 <div class="edit-create">
    <div class="edit-title">
      <h1>Editing Book</h1>
    </div>
    
    <%= form_with model: @book do |f| %>
    <div class="books-text">
      <div class="error-message">  
        <% if @book.errors.any? %>
          <%= @book.errors.count %> error has occurred
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
     </div>
      
      <div class="title-box">
        <p>Title</p>
        <p>
          <%= f.text_field:title %>
        </p>
      </div>
      <div class="body-box">
        <p>Body</p>
        <p>
          <%= f.text_area:body %>
        </p>
      </div>
      <div class="btn-box">
        <%= f.submit "Update Book" %>
      </div>
    </div>
    <% end %>
    
    <div class="book-btn" >
      <%= link_to "Show",book_path(@book),class:"btn btn-info" %>
      <%= link_to "Back",books_path,class:"btn btn-info" %>
    </div>
  </div>